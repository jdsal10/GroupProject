<resources>
    <!-- Base application theme. -->
    <!-- Changed that, because color gradient's didn't work: <style name="Base.Theme.Group10App" parent="Theme.Material3.DayNight.NoActionBar">-->
    <style name="Base.Theme.Group10App" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/gradient_aLostMemory_tetradic1</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/gradient_aLostMemory_tetradic1</item>

        <!-- text colors -->
        <item name="android:textColorPrimary">@color/almost_black</item>
        <item name="android:textColorSecondary">@color/almost_black</item>
        <item name="android:textColorTertiary">@color/almost_black</item>

        <!-- other text settings -->
        <item name="android:fontFamily">@font/manrope_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.Group10App" parent="Base.Theme.Group10App" />

    <!-- Animations -->
    <style name="filterAnimations">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="filterCorners" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/shape_white_very_curved_corners</item>
    </style>
</resources>