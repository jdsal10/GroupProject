<resources>
    <!-- Base application theme. -->
    <!-- Changed that, because color gradient's didn't work: <style name="Base.Theme.Group10App" parent="Theme.Material3.DayNight.NoActionBar">-->
    <style name="Base.Theme.Group10App" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:dialogCornerRadius">@dimen/corner_radius_large</item>

        <!-- Customize your light theme here. -->
        <item name="android:background">@android:color/transparent</item>
        <item name="colorPrimary">@color/gradient_aLostMemory_tetradic1_darker</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/gradient_aLostMemory_tetradic1_darker</item>

        <!-- text colors -->
        <item name="android:textColorPrimary">@color/almost_black</item>
        <item name="android:textColorSecondary">@color/almost_black</item>
        <item name="android:textColorTertiary">@color/almost_black</item>

        <!-- other text settings -->
        <item name="android:fontFamily">@font/manrope_medium</item>
        <item name="android:textSize">@dimen/font_size_default</item>
    </style>

    <!-- Animations -->
    <style name="filterAnimationsBottomPart">
        <item name="android:windowEnterAnimation">@anim/slide_up_in</item>
        <item name="android:windowExitAnimation">@anim/slide_down_out</item>
    </style>
</resources>