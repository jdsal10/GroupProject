<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="3">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="-110dp"
            android:paddingLeft="-50dp"
            android:paddingRight="-50dp"
            android:contentDescription="@string/welcomeBackgroundImage"
            android:foregroundGravity="top"
            android:layout_marginTop="-250dp"
            android:src="@drawable/welcome_circle" />


        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:contentDescription="@string/welcomeLogoBackground"
            android:src="@drawable/logo_background" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:paddingTop="-110dp"
            android:paddingLeft="-50dp"
            android:paddingRight="-50dp"
            android:layout_gravity="center"
            android:contentDescription="@string/welcomeBackgroundImage"
            android:foregroundGravity="top"
            android:src="@drawable/groupimg" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">

        <Button
            android:id="@+id/goToRegister"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:layout_weight="0.5"
            android:layout_marginLeft="25dp"
            android:textSize="30dp"
            android:text="Register" />
        <Button
            android:id="@+id/goToLogin"
            android:layout_width="match_parent"
            android:layout_marginRight="25dp"
            android:layout_height="100dp"
            android:layout_weight="0.5"
            android:textSize="30dp"
            android:layout_marginTop="50dp"
            android:text="Login">
        </Button>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/skipToHome"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:text="@string/welcomeAnonymous"
        android:textSize="25dp">
    </TextView>
</LinearLayout>
