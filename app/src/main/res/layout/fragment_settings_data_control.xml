<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:text="@string/DOBTitle"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/DOBValue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/updateDOB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/updateValue" />

        <Button
            android:id="@+id/clearDOB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clearValue" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:text="@string/sexTitle"
            android:textSize="25sp" />

        <Spinner
            android:id="@+id/sexValue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:entries="@array/sex"/>

        <Button
            android:id="@+id/updateSex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/updateValue" />

        <Button
            android:id="@+id/clearSex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clearValue" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:text="@string/weightTitle"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/weightValue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/weightUnitSpinner"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:entries="@array/weight"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/updateWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/updateValue" />

        <Button
            android:id="@+id/clearWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clearValue" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:text="@string/heightTitle"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/heightValue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/heightUnitSpinner"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:entries="@array/height"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/updateHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/updateValue" />

        <Button
            android:id="@+id/clearHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clearValue" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:text="@string/allergiesTitle"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/allerguesValue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/updateAllergies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/updateValue" />

        <Button
            android:id="@+id/clearAllergies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clearValue" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:text="@string/reasonsTitle"
            android:textSize="25sp" />

        <Spinner
            android:id="@+id/reasonSpin"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:entries="@array/reasons"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/clearReasons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/updateValue" />

        <Button
            android:id="@+id/updateReasons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clearValue" />

    </LinearLayout>

</LinearLayout>