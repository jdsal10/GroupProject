<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Pages.ForgotPassword">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-250dp"
            android:contentDescription="@string/welcomeBackgroundImage"
            android:foregroundGravity="top"
            android:paddingLeft="-50dp"
            android:paddingTop="-110dp"
            android:paddingRight="-50dp"
            android:src="@drawable/welcome_circle" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:contentDescription="@string/welcomeLogoBackground"
            android:src="@drawable/logo_background" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:contentDescription="@string/welcomeBackgroundImage"
            android:foregroundGravity="top"
            android:paddingLeft="-50dp"
            android:paddingTop="-110dp"
            android:paddingRight="-50dp"
            android:src="@drawable/groupimg" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">


        <TextView
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/textView"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Reset your password"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="63dp"
            tools:layout_editor_absoluteY="261dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_gravity="center"
            android:layout_width="271dp"
            android:layout_height="101dp"
            android:gravity="center"
            android:text="Enter the email address associated
with your account and we'll send you an email with further instructions."
            android:textSize="20dp"
            app:layout_constraintEnd_toStartOf="@+id/textView"
            app:layout_constraintStart_toEndOf="@+id/textView"
            tools:layout_editor_absoluteY="303dp" />

        <EditText
            android:layout_gravity="center"
            android:id="@+id/emailtosend"
            android:layout_width="241dp"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="430dp" />



    <Button
        android:id="@+id/passwordchange"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="95dp"
        android:layout_marginTop="10dp"

        android:text="Send Email"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="568dp" />
    </LinearLayout>
</LinearLayout>