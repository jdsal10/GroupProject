<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical"
    tools:context=".Pages.WorkoutOption">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RadioGroup
            android:id="@+id/toggle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:checkedButton="@+id/toggleManual"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/toggleManual"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:layout_marginEnd="3dp"
                android:text="@string/manualToggle" />

            <RadioButton
                android:id="@+id/toggleAI"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="3dp"
                android:background="@color/gradient_cYFTLT_complementary"
                android:button="@null"
                android:gravity="center"
                android:text="@string/aiToggle" />
        </RadioGroup>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/manualView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="9"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/border_rounded_corners"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/searchTitleOption"
                android:textSize="@dimen/font_size_very_large"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:gravity="center"
                android:text="@string/searchButtonDescription"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/font_size_small" />

            <Button
                android:id="@+id/goToSearch"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/searchTitleOption" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="OR"
            android:textColor="@color/gradient_aLostMemory_tetradic1"
            android:textSize="@dimen/font_size_very_large"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/border_rounded_corners"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/createTitle"
                android:textSize="@dimen/font_size_very_large"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text="@string/createButtonDescription"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/font_size_small" />

            <Button
                android:id="@+id/goToCreate"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/createTitle" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/aiView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50sp"
            android:layout_marginBottom="20sp"
            android:text="@string/aiTitle"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/aiDescription"
            android:textColor="@color/dark_grey"
            android:textSize="18sp" />

        <Button
            android:id="@+id/goToAI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:gravity="center"
            android:text="@string/aiBegin" />
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/mainNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemBackground="@color/white"
        app:menu="@menu/home_navigation" />
</LinearLayout>
