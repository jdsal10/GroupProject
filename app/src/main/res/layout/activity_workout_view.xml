<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="25dp"
    android:background="@drawable/border"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/workoutNameView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/workoutName"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/workoutDurationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/workoutDuration"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/workoutMuscleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/workoutTarget"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/workoutEquipmentView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/workoutEquipment"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/workoutDifficultyView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/workoutDifficulty"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>
