<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="25dp"
    android:background="@drawable/shape_transparent_very_curved_corners"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/workoutImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_vertical"
        android:contentDescription="Image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/workoutNameView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/workoutName"
            android:textSize="@dimen/font_size_larger"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/workoutDurationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/workoutDuration" />

        <TextView
            android:id="@+id/workoutMuscleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/workoutTarget" />

        <TextView
            android:id="@+id/workoutEquipmentView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/workoutEquipment" />

        <TextView
            android:id="@+id/workoutDifficultyView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/workoutDifficulty" />
    </LinearLayout>
</LinearLayout>
